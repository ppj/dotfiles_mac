{
  "$schema": "https://opencode.ai/config.json",
  "permission": {
    "edit": "ask",
    "bash": {
      "*": "ask",
      "find *": "allow",
      "grep *": "allow",
      "rg *": "allow",
      "ag *": "allow",
      "cat *": "allow",
      "head *": "allow",
      "tail *": "allow",
      "sed *": "allow",
      "awk *": "allow",
      "echo *": "allow",
      "ls *": "allow",
      // git allowed always
      "git diff *": "allow",
      "git status*": "allow",
      "git log*": "allow",
      "git add *": "ask",
      "git commit *": "ask",
      // github cli
      "gh pr view *": "allow",
      "gh issue view *": "allow",
      "gh issue edit*": "ask",
      "gh repo view *": "allow",
      "gh run view *": "allow",
      "gh release view *": "allow",
      "gh api *": "allow",
      "gh pr edit*": "ask",
      "gh pr create*": "ask"
    }
  }
}
