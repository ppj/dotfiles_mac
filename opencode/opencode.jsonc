{
  "$schema": "https://opencode.ai/config.json",
  "instructions": ["CLAUDE.md"],
  "watcher": {
    "ignore": [
      "node_modules/**",
      ".git/**",
      "dist/**",
      ".next/**",
      ".turbo/**",
      "coverage/**",
      "__pycache__/**"
    ]
  },
  "permission": {
    "edit": "ask",
    "bash": {
      "*": "ask",
      "find *": "allow",
      "grep *": "allow",
      "rg *": "allow",
      "ag *": "allow",
      "cat *": "allow",
      "head *": "allow",
      "tail *": "allow",
      "sed *": "allow",
      "awk *": "allow",
      "echo *": "allow",
      "ls *": "allow",
      "which *": "allow",
      "pwd": "allow",
      "wc *": "allow",
      // git read operations
      "git diff *": "allow",
      "git status*": "allow",
      "git log*": "allow",
      "git branch*": "allow",
      "git show *": "allow",
      "git rev-parse *": "allow",
      // git write operations
      "git add *": "ask",
      "git commit *": "ask",
      "git push*": "ask",
      "git checkout *": "ask",
      "git merge *": "ask",
      "git rebase *": "ask",
      // github cli read operations
      "gh pr view *": "allow",
      "gh pr list*": "allow",
      "gh issue view *": "allow",
      "gh issue list*": "allow",
      "gh repo view *": "allow",
      "gh run view *": "allow",
      "gh run list*": "allow",
      "gh release view *": "allow",
      "gh api *": "allow",
      // github cli write operations
      "gh issue edit*": "ask",
      "gh pr edit*": "ask",
      "gh pr create*": "ask",
      "gh pr merge*": "ask"
    }
  }
}
